  % body colors and fonts
  \setbeamercolor*{normal text}{fg=black,bg=white}

  % block environment
  \colorlet{blockbodybg}{luhgray!20}
  \colorlet{blockbodyfg}{black}
  \colorlet{blocktitlebg}{luhblue}
  \colorlet{blocktitlefg}{white}
  \colorlet{blocksubtitlebg}{luhgray!20}
  \colorlet{blocksubtitlefg}{black}
  \setbeamerfont{block subtitle}{series=\bfseries\vphantom{fj},size=\normalsize}

  \newcommand\blocksubtitle[1]{\vspace{.5em}{\large\bfseries\color{blocksubtitlefg} #1}\vphantom{ÃŸj}\vspace{.25em}}

