  \setbeamerfont{block title}{size=\large,series=\bfseries\vphantom{fj},size=\large}

  % example environment
  \setbeamercolor*{example block body}{bg=luhgray!20,fg=black}
  \setbeamercolor*{example block title}{fg=white,bg=safegreen}
  \setbeamerfont{example title}{size=\large,series=\bf}

  % support for URL on title page (not a standard beamer element)
  \let\inserturl\@empty
  \newcommand\titleurl[1]{\def\inserturl{#1}}%
  \setbeamercolor*{url}{fg=black,bg={}}
  \setbeamerfont*{url}{family=\ttfamily,size=\footnotesize}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%% params: title, title color, title background, subtitle color, subtitle background, text color, text background
\newenvironment{colbox}[7]{
    \leftskip=-0.219cm
    \vspace{-.25cm}
    \begin{tcolorbox}[
        enhanced,
        adjusted title=#1,
        colbacktitle=#7,
        fonttitle={\bfseries\large\color{#2}},
        colback=#7,
        colupper=#6,
        width=\textwidth+.438cm,
        arc=0pt,
        outer arc=0pt,
        boxrule=0pt,
        subtitle style={
            colback=#5,
            colupper=#4,
            borderline west={5pt}{0pt}{#3},
        },
        borderline west={5pt}{0pt}{#3},
    ]{}
    \setbeamertemplate{itemize item}{\color{#3}$\blacksquare$}
    \setbeamertemplate{itemize subitem}{\color{#3}$\blacktriangleright$}
    \setbeamertemplate{itemize subsubitem}{\color{#3}$\blacktriangleright$}
    \usebeamerfont{block body}
  }{
  \end{tcolorbox}
}

\newenvironment{examplebox}[1]{
  \begin{colbox}{#1}{black}{luhblue!50}{black}{luhblue!20}{black}{luhblue!20}
}{
  \end{colbox}
}

\newenvironment{alertbox}[1]{
    \begin{colbox}{#1}{black}{srared}{black}{srared!50}{black}{srared!20}
  }{
  \end{colbox}
}

\newenvironment{highlightbox}[1]{
    \begin{colbox}{#1}{black}{safegreen}{black}{safegreen!50}{black}{safegreen!20}
  }{
  \end{colbox}
}
