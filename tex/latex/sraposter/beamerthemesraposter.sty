\setbeamertemplate{block begin}{
    \leftskip=-0.219cm
    \vskip.2cm
    \begin{tcolorbox}[
        enhanced,
        adjusted title=\insertblocktitle,
        colbacktitle=blocktitlebg,
        coltitle=blocktitlefg,
        fonttitle={\usebeamerfont{block title}},
        colback=blockbodybg,
        colupper=blockbodyfg,
        width=\textwidth+.438cm,
        arc=0pt,
        outer arc=0pt,
        boxrule=0pt,
    ]
    \setbeamertemplate{itemize item}{\color{blocktitlebg}$\blacksquare$}
    \setbeamertemplate{itemize subitem}{\color{blocktitlebg}$\blacktriangleright$}
    \setbeamertemplate{itemize subsubitem}{\color{blocktitlebg}$\blacktriangleright$}
    \usebeamerfont{block body}
    \vspace{.20cm}
  }
  \setbeamertemplate{block end}{
    \vspace{.1cm}
    \end{tcolorbox}
}

